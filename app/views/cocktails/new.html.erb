<div>
  <h1>New Cocktail</h1>

  <%= simple_form_for [@cocktail] do |f| %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "add a cocktail", class: "btn btn-primary" %>
  <% end %>

  <br>
  <%= link_to "Back to cocktails list", cocktails_path, class: "btn btn-primary" %>


</div>
